{
  "name": "remote-vibe-extension",
  "displayName": "Remote Vibe",
  "description": "Expose VS Code Language Model API via HTTP for remote control",
  "version": "0.1.0",
  "publisher": "remote-vibe",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "remote-vibe.start",
        "title": "Remote Vibe: Start Server"
      },
      {
        "command": "remote-vibe.stop",
        "title": "Remote Vibe: Stop Server"
      },
      {
        "command": "remote-vibe.status",
        "title": "Remote Vibe: Show Status"
      }
    ],
    "configuration": {
      "title": "Remote Vibe",
      "properties": {
        "remoteVibe.port": {
          "type": "number",
          "default": 5000,
          "description": "HTTP server port"
        },
        "remoteVibe.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for API requests"
        },
        "remoteVibe.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start server on extension activation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.19.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0"
  }
}