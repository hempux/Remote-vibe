{
  "name": "remote-vibe-extension",
  "displayName": "Remote Vibe Extension",
  "description": "Expose VS Code's Language Model API via HTTP for remote control from mobile devices",
  "version": "1.0.0",
  "publisher": "remote-vibe",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "remoteVibe.startServer",
        "title": "Remote Vibe: Start Server"
      },
      {
        "command": "remoteVibe.stopServer",
        "title": "Remote Vibe: Stop Server"
      },
      {
        "command": "remoteVibe.showStatus",
        "title": "Remote Vibe: Show Status"
      }
    ],
    "configuration": {
      "title": "Remote Vibe",
      "properties": {
        "remoteVibe.extensionPort": {
          "type": "number",
          "default": 5000,
          "description": "Port for the HTTP server"
        },
        "remoteVibe.backendUrl": {
          "type": "string",
          "default": "http://localhost:5001",
          "description": "Backend service URL"
        },
        "remoteVibe.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start server on extension activation"
        },
        "remoteVibe.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "Logging level"
        },
        "remoteVibe.authToken": {
          "type": "string",
          "default": "test-token",
          "description": "Authentication token for API requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.19.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "eslint": "^8.50.0"
  }
}
